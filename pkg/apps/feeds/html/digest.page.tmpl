<style>
img {
    max-width: 100%;
    height: auto;
}

.feeds {
    max-width: 100%;
}
</style>

{{if .IsPicoPlus}}
{{else}}
<blockquote>
  <strong>NOTICE:</strong> Our email digest service is moving to our paid <strong>pico+</strong> plan on <strong>2026-01-22</strong> at which point we will stop sending you email digests.
 	<a href="https://blog.pico.sh/ann-033-moving-rss-to-email-pico-plus">read out annoucement</a>.
</blockquote>
<br />
{{end}}

{{if .SizeWarning}}
<blockquote>
  <strong>NOTICE:</strong> This email is over the size limit (5MB). Inline content has been disabled to avoid email delivery issues.
  We recommend splitting your RSS feeds into multiple digests.
</blockquote>
<br />
{{end}}

{{if .ShowBanner}}
<blockquote>
  <strong>NOTICE:</strong> In order to keep this digest email active you must <a href="{{.KeepAliveURL}}">click this link</a>.
  You have {{.DaysLeft}} days left.
</blockquote>
</br />
{{end}}

<div class="feeds">
  {{range .Feeds}}
  <div style="margin-bottom: 10px;">
    <h1 style="margin-bottom: 3px;"><a href="{{.Link}}">{{.Title}}</a></h1>
    <div>{{.Description}}</div>
  </div>

  <div class="summary">
    <h2>Summary</h2>
    {{range .Items}}
    <ul>
      <li><a href="{{.Link}}">{{.Title}}</a></li>
    </ul>
    {{end}}
    <hr />
  </div>

  {{if $.Options.InlineContent}}
  <div>
    {{range .Items}}
    <div>
      <h1><a href="{{.Link}}">{{.Title}}</a></h1>
      <div>{{.Description}}</div>
      <div>{{.Content}}</div>
    </div>
    <hr />
    {{end}}
  </div>
  {{end}}

  <hr style="margin: 10px 0;" />
  {{end}}
</div>

<blockquote>
  <a href="{{.UnsubURL}}">unsubscribe</a> to this digest.
</blockquote>
