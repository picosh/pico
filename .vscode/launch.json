    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug App",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/${input:service}/${input:type}/main.go",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "service",
            "type": "promptString",
            "description": "The service to debug",
            "default": "pgs"
        },
        {
            "id": "type",
            "type": "promptString",
            "description": "The service type to debug",
            "default": "ssh"
        }
    ]
}
